FROM ghcr.io/wirrockendigital/toolhub:latest

# Install Node.js and npm so the MCP TypeScript server can build and run in this image.
RUN apt-get update && \
    apt-get install -y --no-install-recommends nodejs npm && \
    apt-get clean && rm -rf /var/lib/apt/lists/*

# Run MCP commands from the repository mount path.
WORKDIR /app
